    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "aio (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "module": "aio",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/sensors_server",
            "env": {
                "PYTHONPATH": "."
            }
        },
        {
            "name": "output.mqtt (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "module": "output.mqtt",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/sensors_server",
            "env": {
                "PYTHONPATH": "."
            }
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "C:\\Users\\denis\\Development\\raspberrypi",
                    "remoteRoot": "/home/pi/raspberrypi"
                },
                // Add more path mappings
            ]
        }
    ]
}